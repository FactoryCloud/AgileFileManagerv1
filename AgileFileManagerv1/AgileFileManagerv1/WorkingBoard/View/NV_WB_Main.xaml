<Page x:Class="AgileFileManagerv1.WorkingBoard.View.NV_WB_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgileFileManagerv1.WorkingBoard.View"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="1500"
      Title="NV_WB_Main">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Name="BT_ToDo" Margin="20" Click="MD_ToDo">Pendientes</Button>
        <Button Name="BT_InProgress" Margin="20" Grid.Column="1" Click="MD_InProgress">En Progreso</Button>
        <Button Name="BT_ToTest" Margin="20" Grid.Column="2" Click="MD_ToTest">Por Comprobar</Button>
        <Button Name="BT_Finished" Margin="20" Grid.Column="3" Click="MD_Finished">Finalizados</Button>
        <Button Name="BT_Close" Margin="20" Grid.Column="5" Click="MD_Back">Volver</Button>
    </Grid>
</Page>
